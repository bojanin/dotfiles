syntax on
autocmd BufNewFile,BufFilePre,BufRead *.md set filetype=markdown
autocmd BufNewFile,BufFilePre,BufRead *.cc set filetype=cpp
set noswapfile
set number
set expandtab
set smarttab
set shiftwidth=4
set softtabstop=4
set tabstop=4
" set tab size to 2 for .h, .cc files
autocmd FileType cpp setlocal shiftwidth=2 softtabstop=2 tabstop=2
autocmd FileType tex setlocal shiftwidth=2 softtabstop=2 tabstop=2
autocmd FileType c,cpp,java,py set textwidth=100 " set hard wrap width
set fo-=t " don't auto-wrap text
set colorcolumn=101
set autoindent
set nosmartindent
set nocindent
set visualbell t_vb=
set novisualbell
set ignorecase
set mouse=a

vnoremap < <gv
vnoremap > >gv

call plug#begin('~/.vim/plugged')
Plug 'https://github.com/xuyuanp/nerdtree-git-plugin'
Plug 'https://github.com/ctrlpvim/ctrlp.vim'
Plug 'Valloric/YouCompleteMe'
Plug 'preservim/nerdtree'
Plug 'jiangmiao/auto-pairs'
Plug 'arzg/vim-colors-xcode'

call plug#end()
let g:ctrlp_map = '<c-p>'
let g:ctrlp_cmd = 'CtrlP'

let mapleader = ","
map <C-b> :NERDTreeToggle<CR>
set backspace=indent,eol,start
